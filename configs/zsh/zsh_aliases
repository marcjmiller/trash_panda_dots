# use NeoVim instead of vi/vim
alias vi="nvim"
alias vim="nvim"

# alias ssh for kitty
alias ssh="kitty +kitten ssh"

# ZSH Config aliases
alias zcfg="vi ~/.zshrc"
alias zfun="vi ~/.zsh_func"
alias zali="vi ~/.zsh_aliases"
alias zexp="vi ~/.zsh_exports"
alias omz="vi ~/.oh-my-zsh"
alias reload="source ~/.zshrc"

# Apt-get aliases
alias agu="sudo apt-get -qq update && apt list --upgradable"
alias agi="sudo apt-get -qq install -y"
alias agd="sudo apt-get -qq full-upgrade -y"
alias ags="sudo apt search"
alias afs="sudo apt-file search"
alias alu="apt list --upgradable"
alias cleanup="sudo apt-get autoremove && sudo apt-get autoclean"

# FD (a faster find alternative)
alias fd=fdfind

# Screenshot area select
alias sshot="maim -s | xclip -selection clipboard -t image/png"

# Extra git aliases
# Count lines of code in a git repo
alias gcloc="git ls-files | xargs cloc"

# Execute git pull on children of current directory, using 5 processes
alias gpc="find . -maxdepth 1 -type d | xargs -P5 -I{} git -C {} pull"

# Watch be trolling
alias watch='watch '

# You know why
alias fuck="sudo !!"
